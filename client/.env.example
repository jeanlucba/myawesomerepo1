# PensionFi Client - Environment Variables
# Copy this file to .env and fill in your values

# ==============================================
# NETWORK CONFIGURATION
# ==============================================
# Network to connect to: 'shibuya' or 'astar'
VITE_NETWORK=shibuya

# Chain ID (81 for Shibuya, 592 for Astar)
VITE_CHAIN_ID=81

# ==============================================
# CONTRACT ADDRESSES
# ==============================================
# Main PensionFi contract address (filled after deployment)
VITE_PENSIONFI_CONTRACT_ADDRESS=0x...

# Transactions contract address (filled after deployment)
VITE_TRANSACTIONS_CONTRACT_ADDRESS=0x...

# ==============================================
# RPC ENDPOINTS
# ==============================================
# Custom RPC URL (optional, defaults to public endpoints)
VITE_SHIBUYA_RPC_URL=https://evm.shibuya.astar.network
VITE_ASTAR_RPC_URL=https://evm.astar.network

# WebSocket RPC URL for real-time updates (optional)
VITE_SHIBUYA_WS_URL=wss://rpc.shibuya.astar.network
VITE_ASTAR_WS_URL=wss://rpc.astar.network

# ==============================================
# BLOCK EXPLORER
# ==============================================
VITE_SHIBUYA_EXPLORER_URL=https://shibuya.subscan.io
VITE_ASTAR_EXPLORER_URL=https://astar.subscan.io

# ==============================================
# ANALYTICS & MONITORING (Optional)
# ==============================================
# Enable analytics
VITE_ENABLE_ANALYTICS=false

# Google Analytics ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==============================================
# FEATURE FLAGS (Optional)
# ==============================================
# Enable testnet features
VITE_ENABLE_TESTNET_FEATURES=true

# Enable debug mode
VITE_DEBUG_MODE=false

# ==============================================
# WALLET CONNECT (Optional)
# ==============================================
# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here
