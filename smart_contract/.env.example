# PensionFi Smart Contracts - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==============================================
# DEPLOYER WALLET
# ==============================================
# Private key for contract deployment (WITHOUT 0x prefix)
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# ==============================================
# RPC ENDPOINTS
# ==============================================
# Astar Shibuya Testnet
SHIBUYA_RPC_URL=https://evm.shibuya.astar.network

# Astar Mainnet
ASTAR_RPC_URL=https://evm.astar.network

# Shiden Network
SHIDEN_RPC_URL=https://evm.shiden.astar.network

# Alternative RPC endpoints (for redundancy)
SHIBUYA_RPC_BACKUP=https://shibuya.public.blastapi.io
ASTAR_RPC_BACKUP=https://astar.public.blastapi.io

# ==============================================
# CONTRACT CONFIGURATION
# ==============================================
# Treasury address for protocol fees
TREASURY_ADDRESS=0x...

# Proxy contract addresses (filled after deployment)
PROXY_ADDRESS=0x...
PREVIOUS_IMPL_ADDRESS=0x...

# ==============================================
# BLOCK EXPLORER VERIFICATION
# ==============================================
# API keys for contract verification (may not be required for Astar)
ASTAR_API_KEY=your_api_key_if_needed
SHIBUYA_API_KEY=your_api_key_if_needed

# ==============================================
# GAS & PERFORMANCE MONITORING
# ==============================================
# Enable gas reporting in tests
REPORT_GAS=true

# CoinMarketCap API key for gas cost estimation in USD
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ==============================================
# TESTING & DEVELOPMENT
# ==============================================
# Network to fork for testing (optional)
FORK_NETWORK=astar
FORK_BLOCK_NUMBER=latest

# ==============================================
# MONITORING (Optional)
# ==============================================
# Tenderly configuration
TENDERLY_PROJECT=your_tenderly_project
TENDERLY_USERNAME=your_tenderly_username
TENDERLY_ACCESS_KEY=your_tenderly_access_key

# OpenZeppelin Defender
DEFENDER_API_KEY=your_defender_api_key
DEFENDER_API_SECRET=your_defender_secret
